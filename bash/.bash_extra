metodi_matematici="https://e-l.unifi.it/course/view.php?id=14589" # m
codici="https://e-l.unifi.it/course/view.php?id=14637" # cod
sistemi_distribuiti="https://e-l.unifi.it/course/view.php?id=24629" # sd
