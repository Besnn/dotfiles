	# ======= #
	'algaut') zathura-start ~/academia/"algaut.pdf" &;;
	'arccomp') zathura-start ~/academia/"arccomp.pdf" &;;
	*) echo -e "\e[31m\e[1mbook abbrv. not given\e[0m" >&2
esac
fi
}
